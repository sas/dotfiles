[core]
	excludesfile = ~/.gitignore

[push]
	default = tracking

[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto

[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
	svn-rev = "!f() { git log master --grep="git-svn-id:.*trunk@${1/r/} "; }; f"

[rerere]
	enabled = true
